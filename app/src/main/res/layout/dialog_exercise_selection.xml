<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="运动记录"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择今天的运动情况："
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_no_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未运动"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF757575"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_exercise_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="运动 20分钟"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF4CAF50"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_exercise_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="运动 30分钟"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF4CAF50"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_exercise_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="运动 40分钟"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FF4CAF50"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:backgroundTint="#FFCCCCCC"
        android:textColor="@android:color/black" />

</LinearLayout>