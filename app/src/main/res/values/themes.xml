<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExerciseTracker" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/exercise_green</item>
        <item name="colorPrimaryVariant">@color/exercise_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/exercise_orange</item>
        <item name="colorSecondaryVariant">@color/exercise_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/exercise_dark_green</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/light_gray</item>
    </style>
    
    <!-- Custom Calendar Theme -->
    <style name="CustomCalendarTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/exercise_green</item>
        <item name="colorAccent">@color/exercise_green</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:calendarViewStyle">@style/CustomCalendarViewStyle</item>
    </style>
    
    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/exercise_green</item>
        <item name="android:yearListSelectorColor">@color/exercise_green</item>
    </style>
    
    <style name="CustomCalendarViewStyle" parent="android:Widget.Material.CalendarView">
        <item name="android:selectedWeekBackgroundColor">@color/exercise_green</item>
        <item name="android:focusedMonthDateColor">@color/exercise_green</item>
        <item name="android:weekSeparatorLineColor">@color/exercise_light_green</item>
    </style>
    
    <!-- Calendar Styles -->
    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/exercise_dark_green</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="CalendarHeaderTextAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/exercise_dark_green</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>